<?xml version="1.0" encoding="utf-8"?>
 

 <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
     android:layout_width="fill_parent" android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/Game">
<AbsoluteLayout android:layout_height="wrap_content" android:id="@+id/GameField" android:layout_width="fill_parent">
 <Button android:id="@+id/button_00" android:layout_height="100px" android:layout_width="100px" android:layout_x="5px" android:layout_y="5px" android:text="0" android:textSize="48px" android:background="#000"
     tools:tag="0"></Button>
 <Button android:id="@+id/button_01" android:layout_height="100px" android:layout_width="100px" android:layout_x="110px" android:layout_y="5px" android:text="1" android:textSize="48px"
     android:tag="1"></Button>
<Button android:id="@+id/button_02" android:layout_height="100px" android:layout_width="100px" android:layout_x="215px" android:layout_y="5px" android:text="2" android:textSize="48px"
    android:tag="2"></Button>
<Button android:id="@+id/button_03" android:layout_height="100px" android:layout_width="100px" android:layout_x="5px" android:layout_y="110px" android:text="3" android:textSize="48px"
    android:tag="3"></Button>
<Button android:id="@+id/button_04" android:layout_height="100px" android:layout_width="100px" android:layout_x="110px" android:layout_y="110px" android:text="4" android:textSize="48px"
    android:tag="4"></Button>
<Button android:id="@+id/button_05" android:layout_height="100px" android:layout_width="100px" android:layout_x="215px" android:layout_y="110px" android:text="5" android:textSize="48px"
    android:tag="5"></Button>
<Button android:id="@+id/button_06" android:layout_height="100px" android:layout_width="100px" android:layout_x="5px" android:layout_y="215px" android:text="6" android:textSize="48px"
    android:tag="6"></Button>
<Button android:id="@+id/button_07" android:layout_height="100px" android:layout_width="100px" android:layout_x="110px" android:layout_y="215px" android:text="7" android:textSize="48px"
    android:tag="7"></Button>
<Button android:id="@+id/button_08" android:layout_height="100px" android:layout_width="100px" android:layout_x="215px" android:layout_y="215px" android:text="8" android:textSize="48px"
    android:tag="8"></Button>

 <Button
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_x="243dp"
     android:layout_y="13dp"
     android:id="@+id/sound_button"
     android:background="@drawable/sound_on" />
</AbsoluteLayout>
<TextView android:layout_below="@+id/GameField" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/MoveText" android:textSize="28px" android:text="@string/moves_title"></TextView>

 <TextView android:layout_below="@+id/GameField" android:layout_toRightOf="@+id/MoveText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/move_counter" android:text="0" android:textSize="28px" android:layout_marginLeft="5px" android:layout_alignBaseline="@+id/MoveText"></TextView>


</RelativeLayout>
