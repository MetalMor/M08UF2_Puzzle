<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/RelativeLayout01" 
android:layout_width="fill_parent"
 android:layout_height="fill_parent" 
 >
 
 <ImageView 
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content"
    android:id="@+id/title_image"
    android:background="@drawable/puzzle"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="24px">
  </ImageView>
  
<TextView 
android:layout_height="wrap_content"
 android:layout_width="wrap_content" 
 android:layout_below="@+id/title_image"
  android:layout_centerHorizontal="true" 
  android:id="@+id/TitleText"
   android:text="@string/app_name"
    android:textSize="48px"
     android:typeface="sans"
      android:layout_marginTop="24px">
      </TextView>
      
<Button android:layout_height="wrap_content"
 android:layout_centerHorizontal="true"
  android:id="@+id/button_play"
   android:text="Play"
    android:textSize="28px" 
    android:layout_width="fill_parent"
     android:layout_below="@+id/TitleText"
      android:layout_margin="20px">
      </Button>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignEnd="@+id/button_play"
        android:layout_alignStart="@+id/button_play"
        android:layout_below="@+id/button_play"
        android:layout_alignParentBottom="true"
        android:id="@+id/list_view_scores" />

</RelativeLayout>
